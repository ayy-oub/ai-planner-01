{
    "name": "ai-planner-backend",
    "version": "1.0.0",
    "description": "AI Planner Backend API with Firebase and n8n integration",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/server.js",
        "start:prod": "pm2 start ecosystem.config.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:unit": "jest --testPathPattern=tests/unit",
        "test:integration": "jest --testPathPattern=tests/integration --runInBand",
        "test:e2e": "jest --testPathPattern=tests/e2e --runInBand --forceExit",
        "test:performance": "jest --testPathPattern=tests/performance --runInBand",
        "test:security": "jest --testPathPattern=tests/security --runInBand",
        "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
        "test:report": "jest --coverage --coverageReporters=html && open coverage/index.html",
        "test:ci": "jest --ci --coverage --maxWorkers=2",
        "lint": "eslint src/**/*.ts tests/**/*.ts",
        "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts tests/**/*.ts",
        "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
        "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.ts -o swagger.json",
        "docs:serve": "swagger-ui-express swagger.json",
        "security:audit": "npm audit",
        "security:check": "snyk test",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist coverage logs/*.log",
        "prepare": "husky install",
        "precommit": "lint-staged",
        "postinstall": "npm run build",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop ecosystem.config.js",
        "pm2:restart": "pm2 restart ecosystem.config.js",
        "pm2:logs": "pm2 logs",
        "docker:build": "docker build -t ai-planner-backend .",
        "docker:run": "docker run -p 5000:5000 ai-planner-backend",
        "docker:compose": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "keywords": [
        "api",
        "firebase",
        "planner",
        "production",
        "scalable",
        "typescript",
        "nodejs",
        "ai",
        "productivity"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@godaddy/terminus": "^4.12.1",
        "@nestjs/swagger": "^11.2.0",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/exporter-jaeger": "^2.1.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
        "@opentelemetry/exporter-zipkin": "^2.1.0",
        "@opentelemetry/instrumentation": "^0.206.0",
        "@opentelemetry/instrumentation-express": "^0.55.0",
        "@opentelemetry/instrumentation-http": "^0.206.0",
        "@opentelemetry/instrumentation-mongodb": "^0.59.0",
        "@opentelemetry/instrumentation-redis": "^0.55.0",
        "@opentelemetry/resources": "^2.1.0",
        "@opentelemetry/sdk-trace-base": "^2.1.0",
        "@opentelemetry/sdk-trace-node": "^2.1.0",
        "@opentelemetry/semantic-conventions": "^1.37.0",
        "autocannon": "^8.0.0",
        "axios": "^1.12.2",
        "bcryptjs": "^3.0.2",
        "bull": "^4.16.5",
        "bullmq": "^5.61.0",
        "canvas": "^3.2.0",
        "cloudinary": "^2.7.0",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^8.1.0",
        "express-slow-down": "^3.0.0",
        "express-validator": "^7.2.1",
        "firebase-admin": "^13.5.0",
        "helmet": "^8.1.0",
        "hpp": "^0.2.3",
        "inversify": "^7.10.2",
        "ioredis": "^5.8.1",
        "isomorphic-dompurify": "^2.28.0",
        "joi": "^18.0.1",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mongoose": "^8.19.1",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "node-gzip": "^1.1.2",
        "nodemailer": "^7.0.9",
        "passport": "^0.7.0",
        "passport-firebase-jwt": "^1.2.1",
        "pm2": "^6.0.13",
        "prom-client": "^15.1.3",
        "rate-limiter-flexible": "^8.0.1",
        "reflect-metadata": "^0.2.2",
        "sharp": "^0.34.4",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "tsyringe": "^4.10.0",
        "uuid": "^13.0.0",
        "winston": "^3.18.3",
        "winston-daily-rotate-file": "^5.0.0",
        "xss-clean": "^0.1.4"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/bull": "^3.15.9",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/express-rate-limit": "^5.1.3",
        "@types/express-slow-down": "^1.3.5",
        "@types/hpp": "^0.2.6",
        "@types/inversify": "^2.0.32",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/module-alias": "^2.0.4",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.7.0",
        "@types/node-gzip": "^1.1.3",
        "@types/nodemailer": "^7.0.2",
        "@types/passport": "^1.0.17",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-security": "^3.0.1",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.3",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "snyk": "^1.1299.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run test:unit"
        }
    }
}
