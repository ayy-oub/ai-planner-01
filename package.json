{
    "name": "ai-planner-backend-pro",
    "version": "2.0.0",
    "description": "Production-ready AI Planner Backend API",
    "type": "module",
    "main": "dist/server.js",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/server.js",
        "start:prod": "pm2 start ecosystem.config.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:unit": "jest --testPathPattern=tests/unit",
        "test:integration": "jest --testPathPattern=tests/integration --runInBand",
        "test:e2e": "jest --testPathPattern=tests/e2e --runInBand --forceExit",
        "test:performance": "jest --testPathPattern=tests/performance --runInBand",
        "test:security": "jest --testPathPattern=tests/security --runInBand",
        "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
        "test:report": "jest --coverage --coverageReporters=html && open coverage/index.html",
        "test:ci": "jest --ci --coverage --maxWorkers=2",
        "lint": "eslint src/**/*.ts tests/**/*.ts",
        "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts tests/**/*.ts",
        "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
        "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.ts -o swagger.json",
        "docs:serve": "swagger-ui-express swagger.json",
        "security:audit": "npm audit",
        "security:check": "snyk test",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist coverage logs/*.log",
        "prepare": "husky install",
        "precommit": "lint-staged",
        "postinstall": "npm run build",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop ecosystem.config.js",
        "pm2:restart": "pm2 restart ecosystem.config.js",
        "pm2:logs": "pm2 logs",
        "docker:build": "docker build -t ai-planner-backend .",
        "docker:run": "docker run -p 5000:5000 ai-planner-backend",
        "docker:compose": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "keywords": [
        "api",
        "firebase",
        "planner",
        "production",
        "scalable",
        "typescript",
        "nodejs",
        "ai",
        "productivity"
    ],
    "author": "AI Planner Team",
    "license": "MIT",
    "dependencies": {
        "@godaddy/terminus": "^4.12.1",
        "autocannon": "^7.15.0",
        "axios": "^1.6.7",
        "bcryptjs": "^2.4.3",
        "bull": "^4.12.2",
        "canvas": "^3.2.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "date-fns": "^3.3.1",
        "dotenv": "^16.4.4",
        "express": "^4.18.3",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "express-slow-down": "^2.0.1",
        "express-validator": "^7.0.1",
        "firebase-admin": "^12.0.0",
        "helmet": "^7.1.0",
        "hpp": "^0.2.3",
        "ioredis": "^5.3.1",
        "joi": "^17.12.2",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mongoose": "^8.2.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.11",
        "passport": "^0.7.0",
        "passport-firebase-jwt": "^1.2.1",
        "pm2": "^5.3.1",
        "rate-limiter-flexible": "^5.0.0",
        "sharp": "^0.33.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1",
        "xss-clean": "^0.1.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/bull": "^4.10.0",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^6.0.3",
        "@types/express-slow-down": "^1.3.5",
        "@types/hpp": "^0.2.6",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/module-alias": "^2.0.4",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.11.24",
        "@types/nodemailer": "^6.4.14",
        "@types/passport": "^1.0.16",
        "@types/supertest": "^6.0.2",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "coveralls": "^3.1.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-security": "^2.1.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "snyk": "^1.1284.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^2.4.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "_moduleAliases": {
        "@": "dist",
        "@modules": "dist/modules",
        "@shared": "dist/shared",
        "@infrastructure": "dist/infrastructure",
        "@config": "dist/shared/config",
        "@utils": "dist/shared/utils",
        "@types": "dist/shared/types",
        "@middleware": "dist/shared/middleware",
        "@services": "dist/shared/services",
        "@repositories": "dist/shared/repository"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run test:unit"
        }
    }
}