{
    "watch": [
        "src"
    ],
    "ext": "ts,json",
    "ignore": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register src/server.ts",
    "env": {
        "NODE_ENV": "development"
    },
    "delay": "1000",
    "restartable": "rs",
    "verbose": true,
    "events": {
        "restart": "echo '\\nðŸ”„ Application restarted due to file changes\\n'",
        "start": "echo '\\nðŸš€ Starting application...\\n'",
        "crash": "echo '\\nðŸ’¥ Application crashed!\\n'",
        "exit": "echo '\\nðŸ‘‹ Application exited\\n'"
    }
}