# Application Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
API_PREFIX=/api

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-256-bits-replace-this-in-production
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_RESET_PASSWORD_EXPIRE=10m
JWT_EMAIL_VERIFY_EXPIRE=10m
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-min-256-bits-replace-this-in-production
API_KEY_SECRET=your-api-key-secret-min-32-chars

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_PRIVATE_KEY=your-private-key-with-newlines-replaced
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TLS=false
REDIS_CLUSTER=false

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
PREMIUM_RATE_LIMIT_MULTIPLIER=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,webp,gif,svg
UPLOAD_DIR=uploads
MAX_FILES_PER_REQUEST=5

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d
LOG_FORMAT=combined
ENABLE_AUDIT_LOG=true

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
GRAFANA_PASSWORD=your-grafana-password
PROMETHEUS_PORT=9090

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Security Headers Configuration
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict
ENABLE_HSTS=true
ENABLE_CSP=true

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
SMTP_TLS=true
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=AI Planner

# External Services Configuration
N8N_WEBHOOK_URL=https://your-n8n.com/webhook
AI_SERVICE_URL=https://your-ai-service.com
CALENDAR_SYNC_URL=https://your-calendar-service.com
WEBHOOK_SECRET=your-webhook-secret

# Development Configuration
DEBUG=true
ENABLE_SWAGGER=true
SWAGGER_HOST=localhost:5000
SWAGGER_SCHEMES=http,https

# AI Service Configuration
AI_API_KEY=your-ai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# File Processing Configuration
IMAGE_PROCESSING_ENABLED=true
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
IMAGE_QUALITY=85
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000
QUEUE_REMOVE_ON_SUCCESS=true
QUEUE_REMOVE_ON_FAILURE=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_PREMIUM_FEATURES=true
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_CALENDAR_SYNC=true
ENABLE_HANDWRITING_RECOGNITION=true